<UserControl x:Class="Redefinable.Applications.EasyCapture.View.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Redefinable.Applications.EasyCapture.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="520" Height="50" MaxHeight="50" MinHeight="50">
    <Grid Background="#063360">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*">
            </RowDefinition>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Label Name="PageTitle" Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" Foreground="White">
            ページタイトル
        </Label>
        <Image Name="LogoImage" Grid.Row="1" Grid.Column="1" Source="Images/TestLogo.png" Visibility="Visible" Width="100" Margin="0,0,10,0"/>
    </Grid>
</UserControl>
